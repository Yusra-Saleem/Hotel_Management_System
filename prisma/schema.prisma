// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoomStatus {
  VACANT
  OCCUPIED
  DIRTY
  OOO // Out of Order
}

enum HousekeepingStatus {
  DIRTY
  CLEANING
  INSPECTED
  VACANT
}

model RoomType {
  id            String     @id @default(cuid())
  name          String     @unique
  description   String?
  base_rate     Float
  max_occupancy Int
  amenities     String[]   @default([])
  rooms         Room[]
  ratePlans     RatePlan[]
}

model Room {
  id            String     @id @default(cuid())
  room_number   String     @unique
  typeId        String
  roomType      RoomType   @relation(fields: [typeId], references: [id])
  floor         Int
  features      String[]   @default([])
  status        RoomStatus @default(VACANT)
  max_occupancy Int
  housekeepingTasks HousekeepingTask[]
}

model RatePlan {
  id            String     @id @default(cuid())
  name          String
  roomTypeId    String
  roomType      RoomType   @relation(fields: [roomTypeId], references: [id])
  refundable    Boolean    @default(false)
  seasonal_rate Json[]     @default([]) // [{ startDate: "YYYY-MM-DD", endDate: "YYYY-MM-DD", price: 100.00 }]
  extra_bed_policy Json?   // { price: 20.00, max_beds: 2 }

  @@unique([name, roomTypeId])
}

model HousekeepingTask {
  id              String             @id @default(cuid())
  roomId          String
  room            Room               @relation(fields: [roomId], references: [id])
  assignedToStaffId String?
  assignedToStaff User?              @relation(fields: [assignedToStaffId], references: [id])
  status          HousekeepingStatus @default(DIRTY)
  notes           String?
  timestamp       DateTime           @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  passwordHash  String?
  image         String?
  lastLoginAt   DateTime?
  isActive      Boolean   @default(true)
  failedLoginAttempts Int @default(0)
  lastFailedLoginAttempt DateTime?
  accounts      Account[]
  sessions      Session[]
  role          Role      @default(GUEST)
  housekeepingTasks HousekeepingTask[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  expires   DateTime
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  MANAGER
  RECEPTIONIST
  HOUSEKEEPING
  ACCOUNTANT
  GUEST
}

model Permission {
  id          String           @id @default(cuid())
  action      String // e.g., "create", "read", "update", "delete"
  resource    String // e.g., "user", "booking", "room"
  roles       RolePermission[]
  @@unique([action, resource])
}

model RolePermission {
  id           String     @id @default(cuid())
  role         Role
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  @@unique([role, permissionId])
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  userId    String?
  action    String
  details   Json?
}